{
  "name": "Subject",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Subject title (e.g., Mathematics, Estonian Language)"
    },
    "description": {
      "type": "string",
      "description": "Subject description"
    },
    "uri": {
      "type": "string",
      "description": "RDF URI for this subject"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "published"
      ],
      "default": "draft",
      "description": "Publication status"
    }
  },
  "required": [
    "title"
  ]
}
